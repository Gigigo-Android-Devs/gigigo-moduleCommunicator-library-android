<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gigigo.actioncommunicator.MainActivity"
    tools:showIn="@layout/activity_main"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OCM"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <Button
          android:id="@+id/button_ocm_action_gocontent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="OCM GO CONTENT"
          />
      <Button
          android:id="@+id/button_ocm_action_article"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="OCM ARTICLE"
          />
      <Button
          android:id="@+id/button_ocm_action_image"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="OCM IMAGE"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <Button
          android:id="@+id/button_ocm_action_video"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="OCM VIDEO"
          />
      <Button
          android:id="@+id/button_ocm_action_webview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="OCM WEBVIEW"
          />
    </LinearLayout>
    <TextView
        android:id="@+id/ocm_text_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OX"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <Button
          android:id="@+id/button_ox_action_scan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="OX SCAN"
          />
      <Button
          android:id="@+id/button_ox_action_webview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="OX WEBVIEW"
          />
    </LinearLayout>
    <TextView
        android:id="@+id/ox_text_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
  </LinearLayout>

</RelativeLayout>
